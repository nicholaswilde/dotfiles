{
    "context": {
        "fileName": "AGENTS.md"
    },
    "mcpServers": {
        "MCP_DOCKER": {
            "command": "docker",
            "args": [
                "mcp",
                "gateway",
                "run"
            ]
        },
        "github": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "-e",
                "GITHUB_PERSONAL_ACCESS_TOKEN",
                "ghcr.io/github/github-mcp-server"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "$GITHUB_MCP_PAT"
            }
        }
    },
    "security": {
        "auth": {
            "selectedType": "oauth-personal"
        }
    },
    "general": {
        "previewFeatures": true
    }
}
